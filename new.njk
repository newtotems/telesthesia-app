---
layout: layouts/telesthesia-base.njk
---

<div class="container">
  <div class="main">
    <!-- Content for main div -->
  </div>
  <div class="secondary">
    <div class="tabbed-area active">
      <!-- Content for first tab -->
    </div>
    <div class="tabbed-area">
      <!-- Content for second tab -->
    </div>
    <div class="tabbed-area">
      <!-- Content for third tab -->
    </div>
    <div class="tab-buttons">
      <button class="tab-button active" data-tab="1">Tab 1</button>
      <button class="tab-button" data-tab="2">Tab 2</button>
      <button class="tab-button" data-tab="3">Tab 3</button>
    </div>
  </div>
  <button class="view-menu">View Menu</button>
</div>


<style>
/* Styles for desktop screens */
.container {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.main {
  width: 80%;
}

.secondary {
  width: 20%;
}

.tabbed-area {
  display: none;
}

.tabbed-area.active {
  display: block;
}

.tab-buttons {
  display: flex;
  flex-direction: row;
}

.tab-button {
  flex-grow: 1;
}

.tab-button.active {
  font-weight: bold;
}

/* Styles for mobile screens */
@media only screen and (max-width: 600px) {
  .container {
    position: relative;
  }

  .main {
    width: 100%;
    transition: transform 0.3s ease-in-out;
  }

  .secondary {
    position: absolute;
    top: 0;
    right: -40%;
    width: 40%;
    height: 100%;
    background-color: #f5f5f5;
    transition: transform 0.3s ease-in-out;
  }

  .tabbed-area {
    display: block;
  }

  .tab-buttons {
    display: none;
  }

  .view-menu {
    position: absolute;
    top: 0;
    right: 0;
    z-index: 1;
  }

  .main.menu-open {
    transform: translateX(-40%);
  }

  .secondary.menu-open {
    transform: translateX(-100%);
    right: 0;
  }
}


</style>