<style>
  .layout {
  display: flex;
  flex-direction: column;
  height: 100vh; /* sets the height of the layout to the full viewport height */
}

.layout__header {
  background-color: #f2f2f2;
  padding: 1rem;
}

.layout__header h1 {
  margin: 0;
}

.layout__content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  height: 100%;
}

.layout__map {
  background-color: #d9d9d9;
  flex-basis: 70%;
  height: 70vh;
}

.layout__data {
  background-color: #e5e5e5;
  flex-basis: 30%;
  height: 30vh;
}

@media screen and (max-width: 767px) {
  .layout__content {
    flex-direction: column;
  }

  .layout__map {
    flex-basis: 100%;
    height: 70%;
  }

  .layout__data {
    flex-basis: 100%;
    height: 30%;
  }
}

</style>

<div class="layout">
  <div class="layout__header">
    <h1>telesthesia</h1>
  </div>
  <div class="layout__content">
    <div class="layout__map"></div>
    <div class="layout__data"></div>
  </div>
</div>


<script src='https://api.mapbox.com/mapbox-gl-js/v1.10.1/mapbox-gl.js'></script>
<script src='https://telesthesia-app.netlify.app/js/telesthesia.js'></script>