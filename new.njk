---

<style>
 * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: Arial, sans-serif;
      }

      /* Styles for desktop screens */
      .container {
        display: flex;
        width: 100%;
      }

      .main {
        width: 80%;
        background-color: #f0f0f0;
        padding: 20px;
      }

      .secondary {
        width: 20%;
        background-color: #ccc;
        padding: 20px;
      }

      .tabbed-area {
        display: none;
      }

      .tabbed-area.active {
        display: block;
      }

      .tab-buttons {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
      }

      .tab-button {
        background-color: #fff;
        border: 1px solid #ccc;
        padding: 10px;
        cursor: pointer;
        font-weight: bold;
      }

      .tab-button.active {
        background-color: #ccc;
        color: #fff;
        border: 1px solid #ccc;
      }

      /* Styles for mobile screens */
      @media only screen and (max-width: 600px) {
        .container {
          position: relative;
        }

        .main {
          width: 100%;
          transition: transform 0.3s ease-in-out;
        }

        .secondary {
          position: absolute;
          top: 0;
          right: -40%;
          width: 40%;
          height: 100%;
          background-color: #f5f5f5;
          transition: transform 0.3s ease-in-out;
        }

        .tabbed-area {
          display: block;
        }

        .tab-buttons {
          display: none;
        }

        .view-menu {
          position: absolute;
          top: 0;
          right: 0;
          z-index: 1;
        }

        .main.menu-open {
          transform: translateX(-40%);
        }

        .secondary.menu-open {
          transform: translateX(-100%);
          right: 0;
        }
      }
</style>


  <div class="container">
    <div class="main">
      <h1>Main Content</h1>
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
      <div class="tab-buttons">
        <div class="tab-button active" onclick="showTab('tab1')">Tab 1</div>
        <div class="tab-button" onclick="showTab('tab2')">Tab 2</div>
        <div class="tab-button" onclick="showTab('tab3')">Tab 3</div>
      </div>
      <div class="tabbed-area active" id="tab1">
        <h2>Tab 1</h2>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
      </div>
      <div class="tabbed-area" id="tab2">
        <h2>Tab 2</h2>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
      </div>
      <div class="tabbed-area" id="tab3">
        <h2>Tab 3</h2>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
      </div>
    </div>
    <div class="secondary">
      <h2>Menu</h2>
      <ul>
        <li><a href="#">Link 1</a></li>
        <li><a href="#">Link 2</a></li>
        <li><a href="#">Link 3</a></li>
      </ul>
    </div>
    <button class="view-menu" onclick="toggleMenu()">View Menu</button>
  </div>

  <script>
    function showTab(tabId) {
      var tabs = document.getElementsByClassName("tabbed-area");
      for (var i = 0; i < tabs.length; i++) {
        tabs[i].classList.remove("active");
      }
      document.getElementById(tabId).classList.add("active");
    }

    function toggleMenu() {
      var main = document.getElementsByClassName("main")[0];
      var secondary = document.getElementsByClassName("secondary")[0];
      if (main.classList.contains("menu-open")) {
        main.classList.remove("menu-open");
        secondary.classList.remove("menu-open");
      } else {
        main.classList.add("menu-open");
        secondary.classList.add("menu-open");
      }
    }
  </script>