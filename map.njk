---
layout: layouts/telesthesia-base.njk
---

<div class="layout">

  <div class="layout__header">
    <h1>telesthesia Institute</h1>
    <h2>Sub header</h2>
  </div>

  <div class="layout__map">
      <div id="mapcontainer">
        <div id="map"></div>
      </div>
  </div>

  <div class="layout__data">

         <div id="layout__header-nav">
          <button class="btn-console">Console</button>
          <button class="btn-viewings">Viewings</button>
        </div>

    <div class="content-container">

      <div class="content" id="c1">
            <!-- console -->
            <div id="console" class="panel">
                <div id="console__text" data-ty-prefix="> "><span>Ready for input.</span><span>Select a location to search.</span></div>
                <div id="console__image" class="scanlines"></div>
            </div>

            <div id="log"></div>
      </div>

      <div class="content" id="c2">
        <h2>Viewings</h2>
      {% set itemsPerPage = 5 %}
{% set totalPages = Math.ceil(collections.viewings.length / itemsPerPage) %}

{% set currentPage = 1 %}

{% for post in collections.viewings %}
  <div class="post-item {% if loop.index > (currentPage - 1) * itemsPerPage and loop.index <= currentPage * itemsPerPage %}show{% else %}hide{% endif %}">
    <div>{{ post.data.title }}</div>
    <div>{{ post.templateContent | safe }}</div>
  </div>
{% endfor %}

<button class="previous-button">Previous</button>
<button class="next-button">Next</button>
      </div>
        
      </div>
    
    </div>
  </div>
  </div>

<script src='https://api.mapbox.com/mapbox-gl-js/v1.10.1/mapbox-gl.js'></script>
<script src='https://telesthesia-app.netlify.app/js/telesthesia.js'></script>