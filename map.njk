<div class="layout">

  <div class="layout__map">

      <div id="mapcontainer">
        <div id="map"></div>
      </div>

  </div>

  <div class="layout__data">

<ul class="tabs" role="tablist">
    <li>
        <input type="radio" name="tabs" id="tab1" checked />
        <label for="tab1" 
               role="tab" 
               aria-selected="true" 
               aria-controls="panel1" 
               tabindex="0">Investigation</label>

        <div id="tab-content1" 
             class="tab-content" 
             role="tabpanel" 
             aria-labelledby="description" 
             aria-hidden="false">
          
             <!-- console here_-->
                       <div id="console" class="panel">
            <!-- <h1>telesthesia Insitiute</h1> -->
          <div id="console__text" data-ty-prefix="> "><span>Ready for input.</span><span>Select a location to search.</span></div>
          <div id="console__image" class="scanlines"></div>
      </div>

  <div id="log"></div>

        </div>
    </li>
  
    <li>
        <input type="radio" name="tabs" id="tab2" />
        <label for="tab2"
               role="tab" 
               aria-selected="false" 
               aria-controls="panel2" 
               tabindex="0">Readings</label>
        <div id="tab-content2" 
             class="tab-content"
             role="tabpanel" 
             aria-labelledby="specification" 
             aria-hidden="true">
          <p>Readings</p>
        </div>
    </li>
</ul>

  </div>

</div>

<script src='https://api.mapbox.com/mapbox-gl-js/v1.10.1/mapbox-gl.js'></script>
